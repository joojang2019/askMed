<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= vendor.name %><h1>
        <div style="width:30%; margin: 25px auto">
            <form action="/vendors/<%=vendor._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
            </div>
            </form>
             <a href="/vendors">Go Back</a>
        </div>
    </div>

 <% include ../partials/footer %>