<% include ../partials/header %>


    <div class="row">
        <h1 style="text-align: center">Edit <%=vendor.name%></h1>
        <div style="width:30%; margin: 25px auto">
            <form action="/vendors/<%=vendor._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" name="vendor[name]" value=<%=vendor.name%>>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="vendor[price]" value=<%=vendor.price%>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="vendor[image]" accept="image/*"> //can't upload anything else than image
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="vendor[description]" value=<%=vendor.description%>>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="vendor[location]" id="location" value="<%= vendor.location %>">
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
            </div>
            </form>
             <a href="/vendors">Go Back</a>
        </div>
    </div>


 <% include ../partials/footer %>