<% include ../partials/header %>

    <div class="row">
        <div class="col-md-3">
            <p class="lead">Vendor</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <div id="map"></div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="image-responsive" src="<%= vendor.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$<%=vendor.price%>/night</h4>
                    <h4><a><%=vendor.name%></a></h1>
                    <p> <%= vendor.description %> </p>
                    <p>
                        <em>Submitted By <a href="/users/<%= vendor.author.id%>"><%= vendor.author.username%></a></em>
                    </p>
                    <% if((currentUser && vendor.author.id.equals(currentUser._id)) || (currentUser && currentUser.isAdmin)){   %>
                        <a class="btn btn-warning" href="/vendors/<%=vendor._id%>/edit">Edit</a>
                        <form class="delete-form" action="/vendors/<%=vendor._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% }  %>
                </div>
            </div>
            
            <!--Review section-->
            <div class="thumbnail">
                <div class="caption-full">
                    <% if (vendor.rating === 0) { %>
                    <h5>
                        <em>No reviews yet.</em>
                    </h5>
                    <% } else { %>
                    <p>
                        <span class="fa fa-star checked"></i>
                        <span class="fa fa-star <% if (vendor.rating > 1.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (vendor.rating > 2.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (vendor.rating > 3.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (vendor.rating > 4.5) { %> checked <% } %>"></span>
                        <em>(total reviews: <%= vendor.reviews.length %>)</em>
                    </p>
                    <p>
                        Current vendor rating: <strong><%= parseFloat(vendor.rating).toFixed(2) %></strong>
                    </p>
                    <p><h4>Latest reviews for this vendor:</h4></p>
                    <hr style="margin-top: 0;">
                    <% vendor.reviews.slice(0, 5).forEach(function(review){ %>
                    <div class="row">
                        <div class="col-md-3">
                            <%- '<span class="fa fa-star checked"></span>'.repeat(review.rating) %><%- '<span class="fa fa-star"></span>'.repeat(5 - review.rating) %>
                            <div>Review by: <strong><%= review.author.username %></strong></div>
                            <span><em><%= review.updatedAt.toDateString() %></em></span>
                        </div>
                        <div class="col-md-9">
                            <p style="text-align: justify; word-wrap: break-word;">
                                <%= review.text %>
                                <% if(currentUser && review.author.id.equals(currentUser._id)){ %>
                                    <a id="editbtn" class="btn btn-xs btn-warning"
                                       href="/vendors/<%=vendor._id %>/reviews/<%=review._id %>/edit">Edit</a>
                                    <form id="delete-form" action="/vendors/<%=vendor._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                                        <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                    </form>
                                <% } %>
                            </p>
                            
                        </div>
                    </div>
                    <hr>
                    <% }); %>
                    <div style="margin-bottom: 10px;">
                        <h4><a href="/vendors/<%= vendor._id %>/reviews"><i class="fa fa-search" aria-hidden="true"></i> See all reviews</a></h4>
                    </div>
                    <% } %>
                    <div>
                        <a class="btn btn-primary btn-lg <% if (currentUser && vendor.reviews.some(function (review) {return review.author.id.equals(currentUser._id)})) { %> disabled <% } %>" href="/vendors/<%= vendor._id %>/reviews/new">
                            Write a New Review</a>
                    </div>
                </div>
            </div>
            
            <!-- Comment Section-->
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/vendors/<%= vendor._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% vendor.comments.forEach(function(comment){   %>
                    <div class="row">
                        <div class="col-md-12">
                            <p>
                                <em>Submitted by: <%= vendor.author.username %>, <%= moment(vendor.createdAt).fromNow() %></em>
                            </p>
                            <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>                             
                            <p>
                                <%= comment.text %> 
                             </p>
                          <% if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){   %>
                             <a class="btn btn-xs btn-warning" 
                                href="/vendors/<%=vendor._id%>/comments/<%=comment._id%>/edit">
                                Edit
                             </a>
                             <form class="delete-form" action="/vendors/<%=vendor._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                 <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                             </form>
                             <% } %>
                        </div>
                    </div>
                    
                <% }); %>
            </div>
        </div>
    </div>

    <script>
      function initMap() {
        var lat = <%= vendor.lat %>;
        var lng = <%= vendor.lng %>;
        var center = {lat: lat, lng: lng };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 8,
            center: center,
            scrollwheel: false
        });
        var contentString = `
          <strong><%= vendor.name %><br />
          <%= vendor.location %></strong>
          <p><%= vendor.description %></p>
        `
        var infowindow = new google.maps.InfoWindow({
          content: contentString
        });
        var marker = new google.maps.Marker({
            position: center,
            map: map
        });
        marker.addListener('click', function() {
          infowindow.open(map, marker);
        });
      }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDMO0z4HuabOy8NAAsMeVt-QhUgnK2vFrQ&callback=initMap"></script>



<% include ../partials/footer %>
